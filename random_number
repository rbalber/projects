# Random number guessser

import random

secret_number = random.randint(1,20)
print(
	'I am thinking of a number between \n 1 through 20?'
)

for guessestaken in range(1,7):
	print('Please take a guess')
	guess = int(input())

	if guess > secret_number:
		print('Your number is less than mine. Please try again')

	elif guess < secret_number:
		print('Your number is higher than mine. Please try again')
	else:
		break

if secret_number == guess:
	print(f'Congrats your number is correct {str(secret_number)}')
else:
	print(f'Nope this is the correct answer {str(secret_number)}. ')


